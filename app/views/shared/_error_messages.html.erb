<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <!--The form contains <%= pluralize(@user.errors.count, "error") %>.-->
      入力エラーが<%= object.errors.count %>件あります。
    </div>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
